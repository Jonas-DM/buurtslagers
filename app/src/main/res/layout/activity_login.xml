<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="be.sitewish.buurtslagers.LoginActivity"
              android:descendantFocusability="beforeDescendants"
            android:focusable="true"
            android:focusableInTouchMode="true">

    <!-- Login progress -->

    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:paddingBottom="5dp">
        <ImageView android:layout_width="200dp" android:layout_height="100dp"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginTop="50dp"
                   android:layout_marginBottom="30dp"
                   android:src="@drawable/logo" android:contentDescription="@string/logo_buurtslagers"/>
        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:textColor="@color/colorAccent" android:text="Aanmelden"
                  android:gravity="center"
                  android:textSize="28dp" android:textStyle="bold"
                  android:fontFamily="Roboto"
                  android:layout_marginBottom="40dp"/>
        <EditText android:layout_width="match_parent" android:layout_height="match_parent"
                  android:id="@+id/gebruikersnaam" android:hint="Gebruikersnaam"
                  android:background="@drawable/edittext"
                  android:inputType="text"
                  style="@style/editText" android:textSize="18sp"/>
        <EditText android:layout_width="match_parent" android:layout_height="match_parent"
                  android:id="@+id/password" android:hint="Wachtwoord"
                  android:background="@drawable/edittext"
                  style="@style/editText"
                  android:inputType="textPassword"
                  android:textSize="18sp"/>
        <Button android:layout_width="match_parent" android:layout_height="40dp"
                android:id="@+id/email_sign_in_button"
                android:text="Aanmelden"
                android:textAllCaps="false"
                android:textSize="22dp"
                android:background="@drawable/red_button"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"/>
    </LinearLayout>

</ScrollView>
